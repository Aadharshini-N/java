# Area-of-circle
class Circle {
    double radius;
    void calculate() {
        double area = 3.14* radius * radius;
        System.out.println("Radius = " + radius);
        System.out.println("Area = " + area);
    }
}
public class Main {
    public static void main(String[] args) {
        Circle obj = new Circle();
        obj.radius = 3.0; 
        obj.calculate(); 
    }
}
# output
Radius = 3.0
Area = 28.259999999999998
